@model Automation.Database.Model.testsuite

@{
    ViewBag.Title = "Delete Test Suite";
}

<br />

<h2>Are you sure you want to delete this?</h2>

<p><strong>Warning!</strong> If tou delete a test suite, you will also delete any test cases contained within.</p>

<hr />

<div>
    <dl class="dl-horizontal">
        <dt>Test Suite Id</dt>
        <dd>@Html.DisplayFor(model => model.testsuiteid)</dd>

        <dt>Test Suite Name</dt>
        <dd>@Html.DisplayFor(model => model.testsuitename)</dd>
    </dl>

    <div class="panel panel-primary">
        <div class="panel-heading">Test Cases in Suite</div>
        <table class="table">
            <tr>
                <th>Test Case Id</th>

                <th>Test Case Name</th>
            </tr>

            @foreach (var item in Model.testcases)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.testcaseid)</td>
                    
                    <td>@Html.DisplayFor(modelItem => item.testcasename)</td>
                </tr>
            }
        </table>
    </div>

    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <a class="btn btn-primary" href="@Url.Action("Index")">
                <i class="glyphicon glyphicon-arrow-left"></i>
                <span>Back to List</span>
            </a>

            <button class="btn btn-danger" type="submit" value="Delete">
                <span class="glyphicon glyphicon-trash"></span>
                <span>Delete</span>
            </button>
        </div>
    }
</div>