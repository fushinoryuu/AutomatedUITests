@model IEnumerable<Automation.Gui.Models.setting>

@{
    ViewBag.Title = "Generate XML";
}

<div class="jumbotron">
    <h2>Automation Settings</h2>
    <p class="lead">You can use this simple web app to update the test settings for your Selenium tests.</p>
</div>

<hr />

@Html.Partial("ConfigTable")

<hr />

<div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <strong>Done!</strong>
    Successfully created the new App.config file.
</div>

<div>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="glyphicon glyphicon-plus"></i>
        <span>Add new configuration</span>
    </a>
    <a class="btn btn-info disabled" href="@Url.Action("GenerateXml")">
        <i class="glyphicon glyphicon-export"></i>
        <span>Generate App.config</span>
    </a>
    <a class="btn btn-success" href="@Url.Action("RunAutomatedTests")">
        <i class="glyphicon glyphicon-play"></i>
        <span>Run automated tests</span>
    </a>
    <a class="btn btn-danger" href="@Url.Action("StopAutomatedTests")">
        <i class="glyphicon glyphicon-stop"></i>
        <span>Stop automated tests</span>
    </a>
</div>