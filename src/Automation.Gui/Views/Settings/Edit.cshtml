@model Automation.Gui.Models.setting

@{
    ViewBag.Title = "Edit Settings";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <br />
    <br />

    <h2>Edit settings</h2>

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <div class="control-label col-md-2"><b>Target Browser</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.targetBrowser, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.targetBrowser, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Operating System</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.operatingSystem, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.operatingSystem, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Selenium Hub Uri</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.seleniumHubUri, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.seleniumHubUri, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Screenshot Folder</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.screenshotFolder, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.screenshotFolder, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Save" class="btn btn-success">
                    <i class="glyphicon glyphicon-floppy-disk"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-warning" href="@Url.Action("Index")">
        <i class="glyphicon glyphicon-arrow-left"></i>
        <span>Back to List</span>
    </a>
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
