@model IEnumerable<Automation.Gui.Models.setting>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Automation Settings</h2>
    <p class="lead">You can use this simple web app to update the test settings for your Selenium tests.</p>
</div>

<hr />

<div class="panel panel-primary">
    <div class="panel-heading">Saved Configurations</div>
    <table class="table">
        <tr>
            <th>
                Target Browser
            </th>
            <th>
                Operating System
            </th>
            <th>
                Selenium Hub Uri
            </th>
            <th>
                Screenshot Folder
            </th>
            <th>
                Is Active
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class=@(item.isActive == 1 ? "bg-success" : "")>
                <td>
                    @Html.DisplayFor(modelItem => item.targetBrowser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.operatingSystem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.seleniumHubUri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.screenshotFolder)
                </td>
                <td>
                    @(item.isActive == 1 ? "True" : "False")
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-info" href="@Url.Action("Edit", "Settings", new {item.id})">
                            <span class="glyphicon glyphicon-wrench"></span>
                            <span>Edit</span>
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "Settings", new {item.id})">
                            <span class="glyphicon glyphicon-trash"></span>
                            <span>Delete</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

<hr />

<div>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="glyphicon glyphicon-plus"></i>
        <span>Add new configuration</span>
    </a>
    <a class="btn btn-info">
        <i class="glyphicon glyphicon-export"></i>
        <span>Generate App.config</span>
    </a>
    <a class="btn btn-success">
        <i class="glyphicon glyphicon-play"></i>
        <span>Run automated tests</span>
    </a>
</div>