@model IEnumerable<Automation.Gui.Models.setting>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Automation Settings</h2>
    <p class="lead">You can use this simple web app to update the test settings for your Selenium tests.</p>
</div>

<hr />

@Html.Partial("Table")

<hr />

<div>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="glyphicon glyphicon-plus"></i>
        <span>Add new configuration</span>
    </a>
    <a class="btn btn-info" href="@Url.Action("GenerateXml")">
        <i class="glyphicon glyphicon-export"></i>
        <span>Generate App.config</span>
    </a>
    <a class="btn btn-success">
        <i class="glyphicon glyphicon-play"></i>
        <span>Run automated tests</span>
    </a>
</div>