@model IEnumerable<Automation.Database.Model.setting>

@{
    ViewBag.Title = "Run Automated Tests";
}

<div class="jumbotron">
    <h2>Automation Settings</h2>
    <p class="lead">You can use this page to update the test configurations for your Selenium tests.</p>
</div>

<hr />

@Html.Partial("ConfigTable")

<hr />

<div>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="glyphicon glyphicon-plus"></i>
        <span>Add new configuration</span>
    </a>
    <a class="btn btn-info disabled" href="@Url.Action("GenerateXml")">
        <i class="glyphicon glyphicon-export"></i>
        <span>Generate App.config</span>
    </a>
    <a class="btn btn-success disabled" href="@Url.Action("RunAutomatedTests")">
        <i class="glyphicon glyphicon-play"></i>
        <span>Run automated tests</span>
    </a>
    <a class="btn btn-danger" href="@Url.Action("StopAutomatedTests")">
        <i class="glyphicon glyphicon-stop"></i>
        <span>Stop automated tests</span>
    </a>
</div>